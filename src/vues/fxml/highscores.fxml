<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<GridPane fx:controller="controleurs.HighscoresController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Text text="Tableau des scores"
          GridPane.rowIndex="0"
          textAlignment="CENTER"
          style="-fx-font-size: 30px"/>

    <TableView fx:id="tableau"
               GridPane.rowIndex="1" maxHeight="280" prefWidth="500" fixedCellSize="25">
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
        <columns>
            <TableColumn text="Nom">
                <cellValueFactory>
                    <PropertyValueFactory property="nom" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Score">
                <cellValueFactory>
                    <PropertyValueFactory property="score"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Date">
                <cellValueFactory>
                    <PropertyValueFactory property="formattedDate" />
                </cellValueFactory>
            </TableColumn>
        </columns>

        <items>
        </items>
    </TableView>

    <Button text="Menu principal"
            onAction="#afficherMenuPrincipal"
            GridPane.rowIndex="2"/>

</GridPane>