<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<GridPane fx:controller="jfx.controllers.PlateauController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Text text="Carte1"
          fx:id="carte1"
          GridPane.rowIndex="0"
          GridPane.columnIndex="0"/>

    <Text text="Carte2"
          fx:id="carte2"
          GridPane.rowIndex="0"
          GridPane.columnIndex="1"/>

    <Text text="0"
          fx:id="resultat"
          GridPane.rowIndex="1"
          GridPane.columnIndex="0"/>

    <Text text="0"
          fx:id="score"
          GridPane.rowIndex="1"
          GridPane.columnIndex="1"/>

    <Button text="Tour suivant"
            fx:id="toursuivant"
            onAction="#prochainTour"
            GridPane.rowIndex="2"
            GridPane.columnIndex="0"/>
    <Button text="Abandonner"
            fx:id="abandonner"
            onAction="#menu"
            GridPane.rowIndex="2"
            GridPane.columnIndex="1"/>

</GridPane>